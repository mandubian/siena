<database name="siena">

	<table name="people">

		<column name="id"
			primaryKey="true"
			autoIncrement="true"
			type="BIGINT" />

		<column name="first_name"
			type="VARCHAR"
			size="100"
			required="false" />

		<column name="last_name"
			type="VARCHAR"
			size="100"
			required="false" />

		<column name="city"
			type="VARCHAR"
			size="100"
			required="false" />

	</table>

</database>